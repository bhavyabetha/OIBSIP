<body>
    <div class="container">
        <h1>Temperature Converter</h1>
        <div class="converter">
            <input type="number" id="inputTemperature" placeholder="Enter temperature">
            <select id="inputScale">
                <option value="Celsius">Celsius</option>
                <option value="Fahrenheit">Fahrenheit</option>
            </select>
            <button onclick="convertTemperature()">Convert</button>
        </div>
        <div class="result" id="result"></div>
    </div>
    <script>
	function convertTemperature() {
   	 const inputTemperature = document.getElementById('inputTemperature').value;
    	const inputScale = document.getElementById('inputScale').value;
    	let outputTemperature;
    	let outputScale;

    	if (inputScale === 'Celsius') {
        	outputTemperature = (inputTemperature * 9/5) + 32;
        	outputScale = 'Fahrenheit';
        	document.getElementById('result').innerText = `${inputTemperature}째 Celcius is equal to ${outputTemperature.toFixed(2)}째 ${outputScale}`;
    } else {
        	outputTemperature = (inputTemperature - 32) * 5/9;
        	outputScale = 'Celsius';
        	document.getElementById('result').innerText = `${inputTemperature}째 Fahrenheit is equal to ${outputTemperature.toFixed(2)}째 ${outputScale}`;
    }
}
	
</script>
</body>
